<div class="auth">
    <div class="auth-container">
        <div class="card">
            <header class="auth-header">
                <h1 class="auth-title">
                    <!--div class="logo">
                        <span class="l l1"></span>
                        <span class="l l2"></span>
                        <span class="l l3"></span>
                        <span class="l l4"></span>
                        <span class="l l5"></span>
                    </div-->
                    EscamboApp
                </h1>
            </header>
            <div class="auth-content">
                <p class="text-xs-center">SIGNUP TO GET INSTANT ACCESS</p>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages! %>

                    <div class="form-group">
                        <label for="firstname">Name</label>
                        <input type="text" class="form-control underlined" name="firstname" id="firstname" placeholder="Enter firstname" required="">
                    </div>

                    <div class="form-group">
                        <%= f.label :email %>
                        <%= f.email_field :email, autofocus: true, class: "form-control underlined", placeholder: "Enter email address", required: true %>
                    </div>

                    <div class="form-group">
                        <%= f.label :password %>
                        <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %>
                            characters minimum)</em>
                        <% end %>
                        <div class="row">
                            <div class="col-sm-6">
                                <%= f.password_field :password, autocomplete: "off", class: "form-control underlined", placeholder: "Enter password", required: true %>
                            </div>
                            <div class="col-sm-6">
                                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control underlined", placeholder: "Re-type password", required: true %>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="agree">
                            <input class="checkbox" name="agree" id="agree" type="checkbox" required="">
                            <span>Agree the terms and
                                <a href="#">policy</a>
                            </span>
                        </label>
                    </div>

                    <div class="form-group">
                        <%= f.submit "Sign up", class: "btn btn-block btn-primary" %>
                    </div>
                <% end %>

                <div class="form-group">
                    <p class="text-muted text-xs-center">Already have an account?
                        <%= link_to "Login!", new_session_path(resource_name) %>
                    </p>
                </div>
            </div>
        </div>
        <div class="text-xs-center">
          <%= link_to root_path, class: "btn btn-secondary rounded btn-sm" do %>
              <i class="fa fa-arrow-left"></i>
              Voltar para Home
          <% end %>
        </div>
    </div>
</div>

<div class="auth">
    <div class="auth-container">
        <div class="card">
            <header class="auth-header">
                <h1 class="auth-title">
                    <!--div class="lo-go">
                        <span class="l l1"></span>
                        <span class="l l2"></span>
                        <span class="l l3"></span>
                        <span class="l l4"></span>
                        <span class="l l5"></span>
                    </div-->
                    EscamboApp
                </h1>
            </header>
            <div class="auth-content">
                <p class="text-xs-center">LOGIN TO CONTINUE</p>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-group">
                        <%= f.label :email %><br/>
                        <%= f.email_field :email, autofocus: true, class: "form-control underlined", placeholder: "Your email address" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :password %><br/>
                        <%= f.password_field :password, autocomplete: "off", class: "form-control underlined", placeholder: "Your password" %>
                    </div>

                    <% if devise_mapping.rememberable? -%>
                    <div class="form-group">
                        <%= f.label :remember_me do %>
                          <%= f.check_box :remember_me, class: "checkbox" %>
                          <span>Remember me</span>
                        <% end %>
                        <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot-btn pull-right' %>
                    </div>
                    <% end -%>

                    <div class="form-group">
                        <%= f.submit "Log in", class: "btn btn-block btn-primary" %>
                    </div>
                <% end %>

                <div class="form-group">
                    <p class="text-muted text-xs-center">Do not have an account?
                        <%= link_to "Sign up!", new_registration_path(resource_name) %>
                    </p>
                </div>
            </div>
        </div>
        <div class="text-xs-center">
            <%= link_to root_path, class: "btn btn-secondary rounded btn-sm" do %>
                <i class="fa fa-arrow-left"></i>
                Voltar para Home
            <% end %>
        </div>
    </div>
</div>

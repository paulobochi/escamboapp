<!DOCTYPE html>
<html>
  <head>
    <title>Site - EscamboApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'site', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'site', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render partial: 'layouts/site_shared/header' %>
    <div class='container mt-3 mb-3'>
      <%= yield %>
    </div>
    <%= render partial: 'layouts/site_shared/footer' %>
  </body>
</html>

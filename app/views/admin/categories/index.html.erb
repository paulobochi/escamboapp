<article class="content dashboard-page">
    <div class="title-search-block">
        <div class="title-block">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="title">
                        <%= t('views.categories.title') %>
                    </h3>
                    <!--p class="title-description">
                        <%= t('categories.description') %>
                    </p-->
                </div>
            </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= link_to t('views.buttons.new'), new_admin_category_path, class: "btn btn-primary btn-sm rounded-s" %>
          </div>
          <div class="items-search col-md-6 text-md-right">
            <%= form_tag admin_categories_path, class: 'form-inline', :method => 'get' do %>
              <div class="input-group">
                <%= text_field_tag :q, params[:q], class: "form-control boxed rounded-s", placeholder: t('views.search') %>
                <span class='input-group-btn'>
                  <%= button_tag name: nil, class: 'btn btn-secondary rounded-s' do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
    </div>
    <div class="card">
        <div class="card-block">
            <section class="example">
                <div class="table-flip-scroll">
                    <table class="table table-striped table-bordered table-hover flip-content">
                        <thead class="flip-header">
                            <tr>
                                <th><%= @categories.model.human_attribute_name('name') %></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                          <% @categories.each do |category| %>
                            <tr>
                              <td><%= category.name %></td>
                              <td class="text-md-right text-xs-center">
                                <%= link_to edit_admin_category_path(category), class: 'btn btn-pill-left btn-primary' do %>
                                  <i class="fa fa-edit"></i>
                                <% end %>
                                <button type="button" class="btn btn-pill-right btn-danger" disabled="true"><i class="fa fa-trash"></i></button>
                              </td>
                            </tr>
                          <% end %>
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
    <%= paginate @categories %>
</article>
